<div class="row">
  <br><br>
</div>

<div class="container">
  <div class="row">
    <div class="col s12" align="center">
      <img src="/assets/img/burger.png" width="350">
      <h2>Eat-Da-Burger</h2>
    </div>
  </div>
</div>

<div class ="container">
  <div class="col s12">
    <table class="highlight">
      <thead>
        <tr>
            <th data-field="name">Item Name</th>
            <th data-field="devour">Devour It</th>
            <th data-field="eaten">Eaten</th>
        </tr>
      </thead>

      <tbody>
        <tr>
          <td>
            {{#each burger}}
              {{#unless this.devoured}}
                {{this.id}}. {{this.burger_name}}</p>
              {{/unless}}
            {{/each}}
          </td>

          <td>
            {{#each burger}}
              {{#unless this.devoured}}
                <form action="/{{this.id}}?_method=PUT" method="POST">
                  <input type="hidden" name="burgerName" value="{{this.burger_name}}">
                  <button type="submit">Yum!</button>
                </form>
              {{/unless}}
            {{/each}}
          </td>

          <td>
            {{#each burger}}
              {{#if this.devoured}}
                {{this.id}}. {{this.burger_name}}
              {{/if}}
            {{/each}}
          </td>
        </tr>

      </tbody>
    <table>
  </div>
</div>

<div class="container">
  <form action="/" method="POST">
    <div class="row">
      <div class="input-field col s12">
        <input id="additionalItems" name="name" class="validate" type="text"></input>
        <label for="additionalItems">Add Additional Menu Item</label>
      </div>
    </div>
    <button class="waves-effect waves-light btn" type="submit">Add</button>
  </form>
</div>
